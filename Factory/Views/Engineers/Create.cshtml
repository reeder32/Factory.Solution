@{
  Layout = "_Layout";
}

@model FactoryManager.Models.Engineer

<header>
  <h1>Create new Engineer</h1>
</header>

<main>
  <div class="form">
    @using (Html.BeginForm())
    {
      <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { required = true})
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.Details)
        @Html.TextBoxFor(model => model.Details)
      </div>
      <div class="form-group">
        <input type="submit" value="Add new Engineer" class="btn btn-success" />
      </div>
    }
  </div>
</main>
